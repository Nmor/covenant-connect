modules = ["python-3.11"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Reset DB"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Create Admin"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Insert Test Data"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Fix Admin"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Create Test Users"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Initialize DB"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Compile Translations"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Extract Messages"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Init Spanish"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Init French"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Init DB"

[[workflows.workflow]]
name = "Reset DB"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python scripts/reset_db.py"

[[workflows.workflow]]
name = "Create Admin"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python scripts/create_admin.py"

[[workflows.workflow]]
name = "Insert Test Data"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python insert_test_data.py"

[[workflows.workflow]]
name = "Flask Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python main.py"
waitForPort = 5000

[[workflows.workflow]]
name = "Fix Admin"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python scripts/fix_admin.py"

[[workflows.workflow]]
name = "Create Test Users"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python scripts/fix_admin.py"

[[workflows.workflow]]
name = "Initialize DB"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python scripts/init_db.py"

[[workflows.workflow]]
name = "Compile Translations"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pybabel compile -d translations"

[[workflows.workflow]]
name = "Extract Messages"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pybabel extract -F babel.cfg -k lazy_gettext -o messages.pot ."

[[workflows.workflow]]
name = "Init Spanish"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pybabel init -i messages.pot -d translations -l es"

[[workflows.workflow]]
name = "Init French"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pybabel init -i messages.pot -d translations -l fr"

[[workflows.workflow]]
name = "Init DB"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python scripts/init_db.py"

[deployment]
run = ["sh", "-c", "python main.py"]

[[ports]]
localPort = 5000
externalPort = 80
