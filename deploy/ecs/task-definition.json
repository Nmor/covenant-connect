{
  "family": "covenant-connect-web",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::123456789012:role/covenant-connect-ecs-execution",
  "taskRoleArn": "arn:aws:iam::123456789012:role/covenant-connect-app",
  "containerDefinitions": [
    {
      "name": "web",
      "image": "123456789012.dkr.ecr.us-east-1.amazonaws.com/covenant-connect-backend:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "command": [
        "sh",
        "-c",
        "npx prisma migrate deploy && node apps/backend/dist/src/main.js"
      ],
      "environment": [
        { "name": "APP_NAME", "value": "Covenant Connect" },
        { "name": "NODE_ENV", "value": "production" },
        { "name": "PORT", "value": "8000" },
        { "name": "QUEUE_DRIVER", "value": "redis" },
        { "name": "STORAGE_DRIVER", "value": "s3" }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/covenant-connect",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "web"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/health/live || exit 1"],
        "interval": 30,
        "timeout": 5,
        "startPeriod": 60,
        "retries": 3
      },
      "secrets": [
        { "name": "DATABASE_URL", "valueFrom": "covenant-connect/database-url" },
        { "name": "SESSION_SECRET", "valueFrom": "covenant-connect/app-secrets:SESSION_SECRET::" },
        { "name": "REDIS_URL", "valueFrom": "covenant-connect/app-secrets:REDIS_URL::" },
        { "name": "STRIPE_SECRET_KEY", "valueFrom": "covenant-connect/app-secrets:STRIPE_SECRET_KEY::" },
        { "name": "STRIPE_WEBHOOK_SECRET", "valueFrom": "covenant-connect/app-secrets:STRIPE_WEBHOOK_SECRET::" },
        { "name": "PAYSTACK_SECRET_KEY", "valueFrom": "covenant-connect/app-secrets:PAYSTACK_SECRET_KEY::" },
        { "name": "PAYSTACK_WEBHOOK_SECRET", "valueFrom": "covenant-connect/app-secrets:PAYSTACK_WEBHOOK_SECRET::" },
        { "name": "FINCRA_SECRET_KEY", "valueFrom": "covenant-connect/app-secrets:FINCRA_SECRET_KEY::" },
        { "name": "FINCRA_WEBHOOK_SECRET", "valueFrom": "covenant-connect/app-secrets:FINCRA_WEBHOOK_SECRET::" },
        { "name": "FLUTTERWAVE_SECRET_KEY", "valueFrom": "covenant-connect/app-secrets:FLUTTERWAVE_SECRET_KEY::" },
        { "name": "FLUTTERWAVE_WEBHOOK_SECRET", "valueFrom": "covenant-connect/app-secrets:FLUTTERWAVE_WEBHOOK_SECRET::" },
        { "name": "GOOGLE_CLIENT_ID", "valueFrom": "covenant-connect/app-secrets:GOOGLE_CLIENT_ID::" },
        { "name": "GOOGLE_CLIENT_SECRET", "valueFrom": "covenant-connect/app-secrets:GOOGLE_CLIENT_SECRET::" },
        { "name": "FACEBOOK_CLIENT_ID", "valueFrom": "covenant-connect/app-secrets:FACEBOOK_CLIENT_ID::" },
        { "name": "FACEBOOK_CLIENT_SECRET", "valueFrom": "covenant-connect/app-secrets:FACEBOOK_CLIENT_SECRET::" },
        { "name": "APPLE_CLIENT_ID", "valueFrom": "covenant-connect/app-secrets:APPLE_CLIENT_ID::" },
        { "name": "APPLE_TEAM_ID", "valueFrom": "covenant-connect/app-secrets:APPLE_TEAM_ID::" },
        { "name": "APPLE_KEY_ID", "valueFrom": "covenant-connect/app-secrets:APPLE_KEY_ID::" },
        { "name": "APPLE_PRIVATE_KEY", "valueFrom": "covenant-connect/app-secrets:APPLE_PRIVATE_KEY::" },
        { "name": "AWS_S3_BUCKET", "valueFrom": "covenant-connect/app-secrets:AWS_S3_BUCKET::" },
        { "name": "AWS_REGION", "valueFrom": "covenant-connect/app-secrets:AWS_REGION::" },
        { "name": "AWS_ACCESS_KEY_ID", "valueFrom": "covenant-connect/app-secrets:AWS_ACCESS_KEY_ID::" },
        { "name": "AWS_SECRET_ACCESS_KEY", "valueFrom": "covenant-connect/app-secrets:AWS_SECRET_ACCESS_KEY::" },
        { "name": "ASSET_BASE_URL", "valueFrom": "covenant-connect/app-secrets:ASSET_BASE_URL::" },
        { "name": "SESSION_TTL", "valueFrom": "covenant-connect/app-secrets:SESSION_TTL::" },
        { "name": "COOKIE_SECURE", "valueFrom": "covenant-connect/app-secrets:COOKIE_SECURE::" },
        { "name": "COOKIE_DOMAIN", "valueFrom": "covenant-connect/app-secrets:COOKIE_DOMAIN::" },
        { "name": "LOCAL_STORAGE_DIR", "valueFrom": "covenant-connect/app-secrets:LOCAL_STORAGE_DIR::" }
      ]
    }
  ]
}
