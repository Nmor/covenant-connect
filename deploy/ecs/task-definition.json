{
  "family": "covenant-connect-web",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::123456789012:role/covenant-connect-ecs-execution",
  "taskRoleArn": "arn:aws:iam::123456789012:role/covenant-connect-app",
  "containerDefinitions": [
    {
      "name": "web",
      "image": "123456789012.dkr.ecr.us-east-1.amazonaws.com/covenant-connect:latest",
      "essential": true,
      "portMappings": [
        {
          "containerPort": 5000,
          "protocol": "tcp"
        }
      ],
      "command": [
        "gunicorn",
        "main:app",
        "--bind",
        "0.0.0.0:5000",
        "--workers",
        "4"
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/covenant-connect",
          "awslogs-region": "us-east-1",
          "awslogs-stream-prefix": "web"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "curl -f http://localhost:5000/ || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "startPeriod": 60,
        "retries": 3
      },
      "environment": [
        {
          "name": "AWS_REGION",
          "value": "us-east-1"
        }
      ],
      "secrets": [
        {
          "name": "DATABASE_URL",
          "valueFrom": "covenant-connect/database-url"
        },
        {
          "name": "SECRET_KEY",
          "valueFrom": "covenant-connect/app-secrets:SECRET_KEY::"
        },
        {
          "name": "MAIL_USERNAME",
          "valueFrom": "covenant-connect/app-secrets:MAIL_USERNAME::"
        },
        {
          "name": "MAIL_PASSWORD",
          "valueFrom": "covenant-connect/app-secrets:MAIL_PASSWORD::"
        },
        {
          "name": "PAYSTACK_SECRET_KEY",
          "valueFrom": "covenant-connect/app-secrets:PAYSTACK_SECRET_KEY::"
        },
        {
          "name": "FINCRA_SECRET_KEY",
          "valueFrom": "covenant-connect/app-secrets:FINCRA_SECRET_KEY::"
        },
        {
          "name": "STRIPE_SECRET_KEY",
          "valueFrom": "covenant-connect/app-secrets:STRIPE_SECRET_KEY::"
        },
        {
          "name": "FLUTTERWAVE_SECRET_KEY",
          "valueFrom": "covenant-connect/app-secrets:FLUTTERWAVE_SECRET_KEY::"
        },
        {
          "name": "ENVIRONMENT",
          "valueFrom": "/covenant-connect/config/ENVIRONMENT"
        },
        {
          "name": "FLASK_ENV",
          "valueFrom": "/covenant-connect/config/FLASK_ENV"
        },
        {
          "name": "SESSION_COOKIE_SECURE",
          "valueFrom": "/covenant-connect/config/SESSION_COOKIE_SECURE"
        },
        {
          "name": "SESSION_COOKIE_HTTPONLY",
          "valueFrom": "/covenant-connect/config/SESSION_COOKIE_HTTPONLY"
        },
        {
          "name": "REMEMBER_COOKIE_SECURE",
          "valueFrom": "/covenant-connect/config/REMEMBER_COOKIE_SECURE"
        },
        {
          "name": "SESSION_COOKIE_SAMESITE",
          "valueFrom": "/covenant-connect/config/SESSION_COOKIE_SAMESITE"
        },
        {
          "name": "PREFERRED_URL_SCHEME",
          "valueFrom": "/covenant-connect/config/PREFERRED_URL_SCHEME"
        },
        {
          "name": "SERVER_NAME",
          "valueFrom": "/covenant-connect/config/SERVER_NAME"
        },
        {
          "name": "MAIL_SERVER",
          "valueFrom": "/covenant-connect/config/MAIL_SERVER"
        },
        {
          "name": "MAIL_PORT",
          "valueFrom": "/covenant-connect/config/MAIL_PORT"
        },
        {
          "name": "MAIL_USE_TLS",
          "valueFrom": "/covenant-connect/config/MAIL_USE_TLS"
        },
        {
          "name": "MAIL_DEFAULT_SENDER",
          "valueFrom": "/covenant-connect/config/MAIL_DEFAULT_SENDER"
        },
        {
          "name": "REDIS_URL",
          "valueFrom": "/covenant-connect/config/REDIS_URL"
        },
        {
          "name": "CORS_ORIGINS",
          "valueFrom": "/covenant-connect/config/CORS_ORIGINS"
        }
      ]
    }
  ]
}
